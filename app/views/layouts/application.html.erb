    <body>

    <div id="header">
      <div class="inner-container clearfix">
        <h1 id="logo">
          <a class="home" href="/" title="Go to Workfu's homepage">
            Workfu 
            <span class="ir"></span>
          </a><br />
        </h1>
        <div id="userbox">
          <div class="inner">
            <strong><%= current_user.login %></strong>
            <ul class="clearfix">
              <li><%= link_to 'profile', edit_user_registration_path %></li>
              <%-if is_admin? -%><li><%= link_to 'my tasks', my_tasks_path %></li><%- end -%>
            </ul>
          </div>
          <%= link_to 'log out<span class="ir"></span>', destroy_user_session_path, :id => 'logout' %>
        </div><!-- #userbox -->
      </div><!-- .inner-container -->
    </div><!-- #header -->
    <div id="nav">
      <div class="inner-container clearfix">
        <div id="h-wrap">
          <div class="inner">
            <%= render 'layouts/projects_droplist' %>
          </div>
        </div><!-- #h-wrap -->
        <%= yield :breadcrumb %>
      </div><!-- .inner-container -->
    </div><!-- #nav -->
    
    <div id="container">
      <div class="inner-container">
        <%= yield -%>
      <div id="footer"><!-- footer, maybe you don't need it -->
        <p>Â© 2010 Remfu, <a href="#" target="_blank">http://remfu.com</a></p>
