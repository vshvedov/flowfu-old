      <style type="text/css">
        form.fields fieldset {margin-top: -10px;}
      </style>
    <![endif]-->
    <%= javascript_include_tag 'jquery', 'applications', 'jquery.tools.min' %>
    <%= js_erb_auto_include_tag %>
    <%= yield :head %>
